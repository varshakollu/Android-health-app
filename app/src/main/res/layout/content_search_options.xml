<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.varsha.navtry.SearchOptions"
    android:background="@drawable/background"
    tools:showIn="@layout/activity_search_options">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_gravity="right"
        android:onClick="onclickhome"
        android:src="@drawable/ic_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/db"
        android:id="@+id/imageView6"
        android:layout_above="@+id/barcode"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/barcode"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/barcode"
        android:layout_toLeftOf="@+id/barcode"
        android:layout_toStartOf="@+id/barcode" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/qr"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/qrcode"
        android:layout_toLeftOf="@+id/qrcode"
        android:layout_toStartOf="@+id/qrcode" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ocr"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/ocr"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search using"
        android:id="@+id/textView12"
        android:focusableInTouchMode="false"
        android:fontFamily="times new roman"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

       <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="DATABASE"
        android:id="@+id/loginButton"
        android:layout_marginTop="55dp"
        android:background="#ffffff"
           android:layout_below="@+id/textView12"
           android:layout_toLeftOf="@+id/imageView"
           android:layout_toStartOf="@+id/imageView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="BAR CODE"
        android:id="@+id/barcode"
        android:background="#ffffff"
        android:layout_below="@+id/loginButton"
        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="QR CODE"
        android:id="@+id/qrcode"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_below="@+id/barcode"
        android:layout_alignLeft="@+id/barcode"
        android:layout_alignStart="@+id/barcode" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="OCR"
        android:id="@+id/ocr"
        android:layout_below="@+id/qrcode"
        android:layout_alignLeft="@+id/qrcode"
        android:layout_alignStart="@+id/qrcode"
        android:layout_marginTop="20dp"
        android:background="#ffffff" />

</RelativeLayout>
